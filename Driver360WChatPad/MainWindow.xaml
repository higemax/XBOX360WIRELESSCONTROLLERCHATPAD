        <ComboBox Grid.Column="1" Height="26" HorizontalAlignment="Center" Margin="711,36,12,0" Name="comboBox1" VerticalAlignment="Top" Width="599" ItemsSource="{Binding}" HorizontalContentAlignment="Center">
            <ComboBoxItem Content="Keyboard and Mouse" IsSelected="True" />
            <ComboBoxItem Content="Joystick" />
        </ComboBox>
        <Label Content="Emulate Joystick As" Grid.Column="1" Height="26" HorizontalAlignment="Left" Margin="708,12,0,0" Name="label1" VerticalAlignment="Top" Width="602" HorizontalContentAlignment="Center" />
        <TextBox Grid.Column="1" Height="40" HorizontalAlignment="Left" Margin="1127,207,0,0" Name="joystickAButton" VerticalAlignment="Top" Width="41" Background="#87FFFFFF" FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="A" />
        <TextBox Background="#87FFFFFF" Height="40" HorizontalAlignment="Left" Margin="1087,166,0,0" Name="joystickXButton" VerticalAlignment="Top" Width="41" Grid.Column="1" FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="X" />
        <TextBox Background="#87FFFFFF" Height="40" HorizontalAlignment="Left" Margin="1127,126,0,0" Name="joystickYButton" VerticalAlignment="Top" Width="41" Grid.Column="1" FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="Y" />
        <TextBox Background="#87FFFFFF" Height="40" HorizontalAlignment="Left" Margin="1167,166,0,0" Name="joystickBButton" VerticalAlignment="Top" Width="41" Grid.Column="1" FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="B" />
