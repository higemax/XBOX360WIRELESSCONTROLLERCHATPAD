        <Button Content="Button" Height="39" HorizontalAlignment="Left" Margin="961,150,0,0" Name="Player1" VerticalAlignment="Top" Width="39" Foreground="{x:Null}" Background="{x:Null}" Click="Player1_Click" Grid.Column="1" />
