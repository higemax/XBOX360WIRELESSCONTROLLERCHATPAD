        <Button Content="Button" Height="22" HorizontalAlignment="Left" Margin="831,127,0,0" Name="button7" VerticalAlignment="Top" Width="33" Foreground="{x:Null}" ForceCursor="True" Background="{x:Null}" Grid.Column="1" Click="CapsLock_Click" Grid.Row="1" />
        <Button Background="{x:Null}" Content="Button" ForceCursor="True" Foreground="{x:Null}" Height="18" HorizontalAlignment="Left" Margin="843,154,0,0" Name="GreenSquare" VerticalAlignment="Top" Width="26" Click="GreenSquare_Click" Grid.Column="1" Grid.Row="1" />
        <Button Background="{x:Null}" Content="Button" ForceCursor="True" Foreground="{x:Null}" Height="18" HorizontalAlignment="Left" Margin="875,156,0,0" Name="People" VerticalAlignment="Top" Width="32" Click="People_Click" Grid.Column="1" Grid.Row="1" />
        <Button Background="{x:Null}" Content="Button" ForceCursor="True" Foreground="{x:Null}" Height="18" HorizontalAlignment="Left" Margin="1135,154,0,0" Name="OrangeCircle" VerticalAlignment="Top" Width="24" Click="OrangeCircle_Click" Grid.Column="1" Grid.Row="1" />
