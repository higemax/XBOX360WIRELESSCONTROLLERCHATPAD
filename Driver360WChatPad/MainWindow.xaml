        <TextBox Height="27" HorizontalAlignment="Left" Margin="-4,4,0,0" Name="textBox1" VerticalAlignment="Top" Width="40" Text="0" Grid.ColumnSpan="2" />
        <TextBox Height="27" HorizontalAlignment="Left" Margin="18,4,0,0" Name="textBox2" VerticalAlignment="Top" Width="40" Text="0" Grid.Column="1" />
        <TextBox Height="27" HorizontalAlignment="Left" Margin="64,4,0,0" Name="textBox3" VerticalAlignment="Top" Width="40" Text="0" Grid.Column="1" />
        <TextBox Height="27" HorizontalAlignment="Left" Margin="110,4,0,0" Name="textBox4" VerticalAlignment="Top" Width="40" Text="0" Grid.Column="1" />
        <Button Content="Send Binary" Height="27" HorizontalAlignment="Left" Margin="340,4,0,0" Name="button6" VerticalAlignment="Top" Width="230" Grid.Column="1" Click="SendTextBoxToDevice_Click" />
